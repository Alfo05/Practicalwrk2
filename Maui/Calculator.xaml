<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp.Calculator"
    Title="Calculator">
    <VerticalStackLayout Padding="30" Spacing="25">
        <Label Text="Select Conversion:"/>
        <Picker x:Name="conversionPicker"/>
        <Entry x:Name="InputEntry" Placeholder="0" Keyboard="Numeric"/>
        <Button Text="Convert" Clicked="ConvertButtonClicked"/>
        <Label Text="Result of Conversion: "/>
        <Label x:Name="resultLabel" Text="-" FontSize="15" TextColor="Red"/>
    </VerticalStackLayout>        
</ContentPage>